*
  box-sizing                  border-box
  margin                      0

a
  text-decoration             underline

body
  font-family                 'Roboto Slab', serif
  background-color            #171717
  color                       #fff
  overflow                    hidden

.container
  display                     flex
  display                     -webkit-flex

  .circle-view
    flex                      1 1 auto
    -webkit-flex              1 1 auto

    .menu
      padding                 3em
      position                absolute

      .nav > a
        line-height           2em
        display               block

    .graph
      width                   100%
      height                  100vh

  #reader
    box-shadow                inset 4px 0 12px 0px rgba(0,0,0,0.23)
    background-color          #FFF
    height                    100%
    color                     #222
    width                     30em
    font-family               'Lora', serif
    overflow-y                scroll
    transition                all 0.3s ease-out

    &:hover
      width                   30.3em

    section
      min-height              100vh
      padding                 2em

      h3,h5,p
        margin-bottom         0.6em

      h5
        font-weight           normal
